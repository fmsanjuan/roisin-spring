<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="roisin">
		<class>com.roisin.spring.model.Administrator</class>
		<class>com.roisin.spring.model.DomainEntity</class>
		<class>com.roisin.spring.model.User</class>
		<class>com.roisin.spring.model.TreeToRulesSettings</class>
		<class>com.roisin.spring.model.Rule</class>
		<class>com.roisin.spring.model.Results</class>
		<class>com.roisin.spring.model.RipperSettings</class>
		<class>com.roisin.spring.model.Process</class>
		<class>com.roisin.spring.model.SubgroupSettings</class>
		<class>com.roisin.spring.security.Authority</class>
		<class>com.roisin.spring.security.UserAccount</class>
		<class>com.roisin.spring.model.Examples</class>

		<!-- <provider>org.hibernate.ejb.HibernatePersistence</provider> -->
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/roisin" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="none" /> -->
		</properties>

	</persistence-unit>
	
</persistence>


